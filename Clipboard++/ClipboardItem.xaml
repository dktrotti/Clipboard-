<UserControl x:Class="Clipboard__.ClipboardItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clipboard__"
             mc:Ignorable="d" Height="40" Width="200" Background="White">
    <Grid Margin="0,0,0,0">
        <Image x:Name="thumbnailImage" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="20" Source="{Binding Image, Mode=OneWay}"/>
        <TextBlock x:Name="previewTextBlock" Margin="40,5,5,0" TextWrapping="Wrap" Text="{Binding Text, Mode=OneWay}" VerticalAlignment="Top" Height="20"/>
        <TextBlock x:Name="dateTextBlock" HorizontalAlignment="Right" Margin="0,0,5,5" TextWrapping="Wrap" Text="{Binding Copytime, Mode=OneWay, StringFormat=t}" VerticalAlignment="Bottom" Height="14" FontSize="9" Width="76" RenderTransformOrigin="0.561,-0.295" TextAlignment="Right"/>

    </Grid>
</UserControl>
